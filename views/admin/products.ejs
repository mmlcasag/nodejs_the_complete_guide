<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <% if (products.length > 0) { %>
        <a class="btn" href="/admin/add-product">Add Product</a>
        <br><br>
        <table border="0" width="100%">
            <thead>
                <tr>
                    <th align="center">Image</th>
                    <th align="left">Title</th>
                    <th align="left">Author</th>
                    <th align="right">Price</th>
                    <th align="center">Actions</th>
                </tr>
            </thead>
            <tbody>
            <% for (let product of products) { %>
                <tr>
                    <td align="center"><img src="<%= product.image %>" alt="<%= product.title %>" height="75px"></td>
                    <td align="left"><a href="/product/<%= product.id %>"><%= product.title %></a></td>
                    <td align="left"><%= product.author %></td>
                    <td align="right">$<%= product.price %></td>
                    <td align="center">
                        <a class="btn" href="/admin/edit-product/<%= product.id %>?editing=true">Edit</a>
                        <form action="/admin/delete-product" method="post">
                            <input type="hidden" name="id" value="<%= product.id %>">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    <% } else { %>
        <p>No products to display</p>
        <br><br>
        <a class="btn" href="/admin/add-product">Add Product</a>
    <% } %>
<%- include('../includes/end.ejs') %>