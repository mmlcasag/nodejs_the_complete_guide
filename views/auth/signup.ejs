<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
<%- include('../includes/navigation.ejs') %>
    <form class="login-form" action="/auth/signup" method="POST" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-control">
            <label for="email">E-mail</label>
            <input 
                class="<%= validationErrors.find(error => error.param === 'email') ? 'invalid' : '' %>"
                type="email" name="email" id="email" value="<%= formData.email %>">
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <input
                class="<%= validationErrors.find(error => error.param === 'password') ? 'invalid' : '' %>"
                type="password" name="password" id="password" value="<%= formData.password %>">
        </div>
        <div class="form-control">
            <label for="confirmPassword">Confirm Password</label>
            <input 
                class="<%= validationErrors.find(error => error.param === 'confirmPassword') ? 'invalid' : '' %>"
                type="password" name="confirmPassword" id="confirmPassword" value="<%= formData.confirmPassword %>">
        </div>
        <button class="btn" type="submit">Sign Up</button>
    </form>
<%- include('../includes/end.ejs') %>